---
/**
 * SEOHead Component
 * Unified SEO meta tags for all pages
 */
interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  noindex?: boolean;
  keywords?: string[];
}

const {
  title,
  description,
  canonicalUrl = Astro.url.href,
  ogImage = '/og-image.png',
  ogType = 'website',
  publishedTime,
  modifiedTime,
  noindex = false,
  keywords = [],
} = Astro.props;

const siteName = 'Jessica Mendez | Consultora Ambiental';
const fullOgImage = ogImage.startsWith('http') ? ogImage : new URL(ogImage, Astro.site).href;
const defaultKeywords = ['consultora ambiental', 'ESG', 'sostenibilidad', 'medio ambiente', 'IFC', 'regulacion ambiental', 'Mexico'];
const allKeywords = [...new Set([...keywords, ...defaultKeywords])];
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content="Jessica Viridiana Mendez Gomez" />
<meta name="keywords" content={allKeywords.join(', ')} />
{noindex && <meta name="robots" content="noindex, nofollow" />}
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullOgImage} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="es_MX" />

{ogType === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime.toISOString()} />
)}
{ogType === 'article' && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime.toISOString()} />
)}
{ogType === 'article' && (
  <meta property="article:author" content="Jessica Viridiana Mendez Gomez" />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullOgImage} />

<!-- Language -->
<meta property="og:locale" content="es_MX" />
<link rel="alternate" hreflang="es" href={canonicalUrl} />
