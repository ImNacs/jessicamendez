---
/**
 * Hero Section - Organic Luxury Design
 * Astro component with CSS-only animations for optimal performance
 */
import { Button } from '@/components/ui/button';
import { LeadMagnetForm } from '@/components/blog/LeadMagnetForm';
import { profile } from '@/lib/utils';

const leadMagnetConfig = {
  id: 'due_diligence_esg',
  label: 'Guía gratuita',
  title: 'Due Diligence ESG',
  description: 'Lo que evalúan los bancos antes de financiar',
  benefits: [
    'Criterios ESG que revisan IFC y bancos',
    'Checklist de documentación requerida',
    'Red flags que debes evitar',
  ],
  buttonText: 'Descargar gratis',
  badge: '+500 descargas',
};

const credentials = [
  'IFC Performance Standards',
  'Principios de Ecuador',
  'SEMARNAT',
];

const sectors = [
  { name: 'Energía Renovable', icon: 'zap' },
  { name: 'Infraestructura', icon: 'building' },
  { name: 'Minería', icon: 'mountain' },
  { name: 'Oil & Gas', icon: 'flame' },
];
---

<section
  id="inicio"
  class="relative min-h-screen flex items-center overflow-hidden pt-20 pb-12"
  aria-label="Introducción"
>
  <!-- Background with organic blobs -->
  <div class="absolute inset-0 bg-gradient-hero">
    <!-- Decorative blobs -->
    <div
      class="absolute top-20 -right-32 w-[400px] h-[400px] sm:w-[500px] sm:h-[500px] rounded-full blob-verde animate-breathe"
      style="animation-delay: 0s;"
      aria-hidden="true"
    />
    <div
      class="absolute -bottom-20 -left-20 w-[300px] h-[300px] sm:w-[400px] sm:h-[400px] rounded-full blob-rosa animate-breathe"
      style="animation-delay: 4s;"
      aria-hidden="true"
    />
  </div>

  <!-- Content Grid -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6">
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">

      <!-- Text Content -->
      <div class="lg:col-span-7 text-center lg:text-left">

        <!-- Badge -->
        <div class="animate-reveal-up stagger-1">
          <span
            class="inline-flex items-center gap-2 px-4 py-2
                   bg-verde-50 dark:bg-verde-900/40 border border-verde-200 dark:border-verde-700
                   rounded-full text-sm text-verde-700 dark:text-verde-300"
          >
            <span class="w-2 h-2 rounded-full bg-verde-500 animate-pulse" aria-hidden="true"></span>
            Consultora Ambiental Senior · {profile.experience}
          </span>
        </div>

        <!-- Headline -->
        <h1
          class="mt-6 mb-6 text-gris-900 dark:text-crema-100 animate-reveal-up stagger-2"
        >
          <span class="block">Tu aliada en</span>
          <span class="block text-verde-600 dark:text-verde-400">regulación ambiental</span>
          <span class="block">
            y <span class="text-rosa-500 dark:text-rosa-400">financiamiento sostenible</span>
          </span>
        </h1>

        <!-- Subtitle -->
        <p
          class="text-base sm:text-lg text-gris-600 dark:text-crema-300 max-w-xl mx-auto lg:mx-0 mb-8 leading-relaxed animate-reveal-up stagger-3"
        >
          Acompaño a desarrolladores de proyectos y entidades financieras en la
          obtención de permisos ambientales y cumplimiento de estándares internacionales.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start animate-reveal-up stagger-4">
          <Button
            size="lg"
            className="group gap-2 bg-verde-600 hover:bg-verde-700 dark:bg-verde-500 dark:hover:bg-verde-400 text-white text-base px-8 py-6 shadow-lg shadow-verde-600/20 hover:shadow-xl hover:shadow-verde-600/30 transition-all duration-300"
          >
            <a href="#contacto" class="flex items-center gap-2" data-astro-prefetch="load">
              Agenda una consulta
              <svg
                class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </Button>

          <Button
            size="lg"
            variant="outline"
            className="border-gris-300 dark:border-verde-600 text-gris-700 dark:text-crema-200 hover:bg-verde-50 dark:hover:bg-verde-900/50 hover:border-verde-400 dark:hover:border-verde-500 hover:text-gris-900 dark:hover:text-crema-100 text-base px-8 py-6 transition-all duration-300"
          >
            <a href="#servicios" class="flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              Ver servicios
            </a>
          </Button>
        </div>

        <!-- Credentials -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3 mt-8 animate-reveal-up stagger-5">
          {credentials.map((credential) => (
            <span class="inline-flex items-center gap-1.5 text-sm text-gris-600 dark:text-crema-400">
              <svg class="h-4 w-4 text-verde-500 dark:text-verde-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {credential}
            </span>
          ))}
        </div>
      </div>

      <!-- Visual Element - Lead Magnet -->
      <div class="lg:col-span-5 relative animate-reveal-scale stagger-4 hidden lg:block">
        <LeadMagnetForm config={leadMagnetConfig} variant="card" client:visible />
      </div>
    </div>

    <!-- Social proof bar -->
    <div
      class="mt-16 pt-8 border-t border-gris-200 dark:border-verde-800 animate-reveal-up stagger-6"
    >
      <p class="text-sm text-gris-500 dark:text-crema-400 text-center lg:text-left mb-4 uppercase tracking-wider">
        Especialista en sectores de alto impacto
      </p>
      <div class="flex flex-wrap justify-center lg:justify-start items-center gap-6 sm:gap-8">
        {sectors.map((sector, index) => (
          <span class="flex items-center gap-2 text-sm font-medium text-gris-600 dark:text-crema-300 hover:text-verde-600 dark:hover:text-verde-400 transition-colors cursor-default">
            {sector.name}
            {index < sectors.length - 1 && (
              <span class="hidden sm:inline text-gris-300 dark:text-verde-700 ml-4">•</span>
            )}
          </span>
        ))}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-6 left-1/2 -translate-x-1/2 animate-bounce hidden sm:flex"
    style="animation-duration: 2s;"
  >
    <a
      href="#servicios"
      class="flex flex-col items-center gap-1 text-gris-400 dark:text-crema-500 hover:text-verde-600 dark:hover:text-verde-400 transition-colors"
      aria-label="Scroll para ver más"
    >
      <span class="text-xs uppercase tracking-widest">Descubre</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
