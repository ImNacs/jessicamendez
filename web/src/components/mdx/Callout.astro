};

const c = config[type];
const displayTitle = title || c.title;
---

<aside class:list={[
  'not-prose my-6 rounded-xl border-l-4 p-4 sm:p-5',
  c.lightBg, c.darkBg,
  c.lightBorder, c.darkBorder,
]}>
  <div class="flex items-start gap-3">
    <span class:list={[
      'flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center text-lg',
      c.lightIconBg, c.darkIconBg,
    ]}>
      {c.icon}
    </span>
    <div class="flex-1 min-w-0">
      <p class:list={['font-semibold text-sm mb-1', c.lightText, c.darkText]}>
        {displayTitle}
      </p>
      <div class:list={['text-sm leading-relaxed', c.lightText, c.darkText, 'opacity-90 dark:opacity-95']}>
        <slot />
      </div>
    </div>
  </div>
</aside>
