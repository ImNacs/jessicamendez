---
/**
 * Callout - Admonition component for MDX content
 * Usage: <Callout type="info">Your content here</Callout>
 *
 * Uses project color palette for consistent dark/light theme support
 */
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'important' | 'note';
  title?: string;
}

const { type = 'info', title } = Astro.props;

// Using project palette: verde, rosa, crema, gris
const config = {
  info: {
    icon: 'üí°',
    title: 'Informaci√≥n',
    // Verde palette for info
    lightBg: 'bg-verde-50',
    darkBg: 'dark:bg-verde-900/40',
    lightBorder: 'border-verde-400',
    darkBorder: 'dark:border-verde-600',
    lightText: 'text-verde-900',
    darkText: 'dark:text-verde-100',
    lightIconBg: 'bg-verde-100',
    darkIconBg: 'dark:bg-verde-800/60',
  },
  warning: {
    icon: '‚ö†Ô∏è',
    title: 'Advertencia',
    // Rosa/terracotta for warnings
    lightBg: 'bg-rosa-50',
    darkBg: 'dark:bg-rosa-900/40',
    lightBorder: 'border-rosa-400',
    darkBorder: 'dark:border-rosa-600',
    lightText: 'text-rosa-900',
    darkText: 'dark:text-rosa-100',
    lightIconBg: 'bg-rosa-100',
    darkIconBg: 'dark:bg-rosa-800/60',
  },
  tip: {
    icon: '‚ú®',
    title: 'Consejo',
    // Verde accent for tips
    lightBg: 'bg-verde-50',
    darkBg: 'dark:bg-verde-900/40',
    lightBorder: 'border-verde-500',
    darkBorder: 'dark:border-verde-500',
    lightText: 'text-verde-900',
    darkText: 'dark:text-verde-100',
    lightIconBg: 'bg-verde-100',
    darkIconBg: 'dark:bg-verde-800/60',
  },
  important: {
    icon: 'üîî',
    title: 'Importante',
    // Rosa for important
    lightBg: 'bg-rosa-50',
    darkBg: 'dark:bg-rosa-900/40',
    lightBorder: 'border-rosa-500',
    darkBorder: 'dark:border-rosa-500',
    lightText: 'text-rosa-900',
    darkText: 'dark:text-rosa-100',
    lightIconBg: 'bg-rosa-100',
