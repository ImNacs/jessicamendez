---
import Layout from '../layouts/Layout.astro';
import Header from '../components/website/Header.astro';
import Hero from '../components/website/Hero.astro';
import { About } from '../components/website/About';
import { Services } from '../components/website/Services';
import { Experience } from '../components/website/Experience';
import { Contact } from '../components/website/Contact';
import { Footer } from '../components/website/Footer';
---

<Layout>
  <Header />

  <main id="main-content">
    <Hero />
    <Services client:visible />
    <About client:visible />
    <Experience client:visible />
    <Contact client:visible />
  </main>

  <Footer client:idle />
</Layout>
